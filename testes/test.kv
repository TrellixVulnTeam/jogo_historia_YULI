<Mensagem>:
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height

<CaylaFala>:
    size_hint_y:None
    height:self.minimum_height
    orientation: 'horizontal'
    padding: 10, 0, 0, 10
    spacing:10

    # Adiciona a Cayla <-
    Button:
        size_hint: None, None
        border: 0, 0, 0, 0
        background_normal:'cayla_rosa.png'
        background_down: 'cayla_rosa.png'
