<Mensagem>:
    canvas:
        Rectangle:
            source: 'manipular_historia/img/fundo_mensagem.png'
            size: self.size
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height+15


<PersonFala>:
    size_hint_y:None
    height:self.minimum_height

<EuFala>:
    size_hint_y: None
    height:self.minimum_height
    Label:
        id:lab
